<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <br>


  <%= f.text_field :genre_name, list: "genre_autocomplete", id: "song_genre_id" %>
  <datalist id="genre_autocomplete">
  <% Genre.all.each do |genre| %>
    <option value="<%= genre.name %>">
  <% end %>
  </datalist>

  <br>
  <br>
   <input id= "song_notes_1" name="song[note_contents][]">
   <br>
   <input id= "song_notes_2" name="song[note_contents][]">
   <br>
   <input id= "song_notes_3" name="song[note_contents][]">
   <br>



  <%= f.submit %>
<% end %>
