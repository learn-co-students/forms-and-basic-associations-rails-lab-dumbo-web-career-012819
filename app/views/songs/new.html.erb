<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br/>


  <%= f.text_field :genre_name, list: "genre_id", id: "song_genre_id" %>
  <datalist id="genre_id">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end  %>

  </datalist>

  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <input type="text" name="song[note_contents][]" id="song_notes_2">
  <input type="text" name="song[note_contents][]" id="song_notes_3">

  <%= f.submit %>
<% end %>
